{
  "name": "dms",
  "version": "1.0.0",
  "description": "A JavaScript library for converting between decimal degrees and degrees, minutes, and seconds (DMS).",
  "main": "dms.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jasmine",
    "build:tsc": "tsc",
    "build:babel": "babel es6/dms.js > dms.js",
    "build": "npm run build:tsc && npm run build:babel",
    "doc": "jsdoc2md dms.js --template README.hbs > README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WSDOT-GIS/dms-js.git"
  },
  "keywords": [
    "DMS",
    "decimal",
    "degrees",
    "degree",
    "minute",
    "second",
    "GIS"
  ],
  "author": "WSDOT-GIS",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/WSDOT-GIS/dms-js/issues"
  },
  "homepage": "https://github.com/WSDOT-GIS/dms-js#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "jasmine": "^2.4.1",
    "jsdoc-to-markdown": "^1.3.6",
    "typescript": "^1.8.10"
  }
}
